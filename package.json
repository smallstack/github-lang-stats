{
  "name": "github-lang-stats",
  "version": "1.0.2",
  "description": "CLI that computes per-author GitHub language statistics by sampling commit file changes",
  "type": "module",
  "main": "./dist/lib.js",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    }
  },
  "bin": {
    "github-lang-stats": "./dist/index.js",
    "gls": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "biome lint src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "prepare": "lefthook install",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@inquirer/checkbox": "^3.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@types/node": "^22.0.0",
    "lefthook": "^2.1.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "github",
    "statistics",
    "languages",
    "cli",
    "developer",
    "git",
    "language-stats",
    "code-analysis",
    "contribution-stats"
  ],
  "author": {
    "name": "smallstack GmbH",
    "url": "https://smallstack.com"
  },
  "homepage": "https://github.com/smallstack/github-lang-stats#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/smallstack/github-lang-stats.git"
  },
  "bugs": {
    "url": "https://github.com/smallstack/github-lang-stats/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
